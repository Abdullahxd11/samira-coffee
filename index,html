<script>
let lang = 'en';
function toggleLang(){
  if(lang==='en'){
    document.getElementById('tagline').innerText='Fudud. Cusub. Qaxwo Tayo Leh.';
    document.getElementById('aboutTitle').innerText='Nagu Saabsan';
    document.getElementById('aboutText').innerText='Samira Coffee Shop waa meel raaxo leh oo bixisa qaxwo tayo sare leh iyo cabitaanno cusub.';
    document.getElementById('servicesTitle').innerText='Liiska';
    document.getElementById('contactTitle').innerText='Nala Soo Xiriir';
    document.getElementById('contactText').innerText='Nagu soo booqo laanta ama nala soo xiriir macluumaad dheeraad ah.';
    lang='so';
  } else {
    document.getElementById('tagline').innerText='Simple. Fresh. Quality Coffee.';
    document.getElementById('aboutTitle').innerText='About Us';
    document.getElementById('aboutText').innerText='Samira Coffee Shop is a cozy place offering high‚Äëquality coffee, fresh drinks, and a calm environment for everyone.';
    document.getElementById('servicesTitle').innerText='Our Menu';
    document.getElementById('contactTitle').innerText='Contact Us';
    document.getElementById('contactText').innerText='Visit us at our branch or contact us for more information.';
    lang='en';
  }
}
</script>

